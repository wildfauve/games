<div class='alert alert-info fade in' data-alert='alert'>
   <h3>Games</h3>
</div>

<table class="table">
   <thead>
     <tr>
       <th>Date</th>
       <th>Game</th>
       <th>Winner</th>      
       <th>Players</th>             
       <th>Actions</th>      
     </tr>
   </thead>
   <tbody>
      <% for game in @games %>         
         <tr>
            <td>
               <%= game.play_date %>
            </td>
            <td>
               <%= game.game_name %>
            </td>
            <td>
               <span class="label label-danger"><%= game.winner.name if game.has_a_winner%></span>
            </td>
            <td>
               <% game.players.each do |p| %>
                  <span class="label label-success"><%= p.name %></span>
               <% end %>
            </td>

            <td>
               <%= link_to("Play",  game_path(game), class: 'btn btn-default') if !game.has_a_winner%>
               <%= link_to("View",  game_path(game), class: 'btn btn-default') if game.has_a_winner%>               
               <%= link_to "Delete",  game_path(game), method: :delete, class: 'btn btn-danger'%>                  
            </td>
         </tr>
      <% end %>
   </tbody>
</table>
